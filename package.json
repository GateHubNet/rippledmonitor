{
  "name": "@gatehub/rippledmonitor",
  "version": "0.0.0",
  "description": "Rippled status monitor and liveness probe",
  "main": "dist/index.js",
  "scripts": {
    "eslint": "eslint .",
    "flow": "flow",
    "lint": "npm -s run eslint",
    "tests": "mocha --recursive",
    "test": "npm -s run tests",
    "pretest": "npm -s run lint",
    "release": "np",
    "start": "node index.js"
  },
  "author": "GateHub",
  "private": true,
  "engines": {
    "node": ">=7.6"
  },
  "engineStrict": true,
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^4.19.1",
    "eslint-config-xo": "^0.17.0",
    "eslint-plugin-mocha": "^4.7.0",
    "mocha": "^3.1.2",
    "np": "^2.10.1"
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype",
      "mocha"
    ],
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "mocha/no-exclusive-tests": "error"
    }
  },
  "babel": {
    "plugins": [
      "transform-flow-comments"
    ],
    "sourceMaps": false
  },
  "dependencies": {
    "koa": "^2.0.0-alpha.8",
    "ripple-lib": "^0.17.7"
  }
}
